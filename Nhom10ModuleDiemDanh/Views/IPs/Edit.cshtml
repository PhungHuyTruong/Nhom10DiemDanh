@model API.Data.IP
@{
    Layout = null;
}


<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdIP" />
    <input type="hidden" asp-for="IdCoSo" />

    <div class="form-group">
        <label asp-for="KieuIP" style="color:black"></label>
        <input asp-for="KieuIP" class="form-control" />
        <span asp-validation-for="KieuIP" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IP_DaiIP" style="color:black"></label>
        <input asp-for="IP_DaiIP" class="form-control" />
        <span asp-validation-for="IP_DaiIP" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TrangThai" style="color:black"></label>
        <select asp-for="TrangThai" class="form-control">
            <option value="true">Hoạt động</option>
            <option value="false">Ngừng hoạt động</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" asp-route-coSoId="@Model.IdCoSo" class="btn btn-secondary">Quay lại</a>
</form>
