@using API.Data
@model Nhom10ModuleDiemDanh.Models.BoMonCoSoViewModel

<form id="editForm" asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdBoMonCoSo" />
    <input type="hidden" asp-for="NgayTao" value="@Model.NgayTao" />
    <input type="hidden" asp-for="NgayCapNhat" value="@Model.NgayCapNhat" />

    <div class="form-group mb-3">
        <label asp-for="TenBoMon" class="control-label">Tên bộ môn</label>
        <input asp-for="TenBoMon" class="form-control" readonly />
        <input type="hidden" asp-for="IdBoMon" /> <!-- Đảm bảo IdBoMon được gửi -->
        <span asp-validation-for="TenBoMon" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IdCoSo" class="control-label">Tên cơ sở</label>
        @Html.DropDownListFor(model => model.IdCoSo, ViewData["CoSos"] as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>()), "Tất cả cơ sở", new { @class = "form-control" })
        <input type="hidden" asp-for="TenCoSo" value="@Model.TenCoSo" /> <!-- Giữ giá trị TenCoSo -->
        <span asp-validation-for="IdCoSo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TrangThai" class="control-label">Trạng thái</label>
        <div class="form-check form-switch">
            <input asp-for="TrangThai" class="form-check-input" type="checkbox" checked="@Model.TrangThai" />
            <label class="form-check-label">Hoạt động</label>
        </div>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>
</form>