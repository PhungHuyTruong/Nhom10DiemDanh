@model API.Data.QuanLyBoMon
@{
    Layout = null;
}

<form asp-action="Edit" asp-route-id="@Model.IDBoMon" method="post">
    <input type="hidden" asp-for="IDBoMon" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TenBoMon"></label>
        <input asp-for="TenBoMon" class="form-control" />
        <span asp-validation-for="TenBoMon" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaBoMon"></label>
        <input asp-for="MaBoMon" class="form-control" />
        <span asp-validation-for="MaBoMon" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <input type="hidden" asp-for="CoSoHoatDong" value="Chưa có" />
        <span asp-validation-for="CoSoHoatDong" class="text-danger small"></span>
    </div>


    <div class="mt-3">
        <button type="submit" class="btn btn-warning">Cập nhật</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
    </div>
</form>