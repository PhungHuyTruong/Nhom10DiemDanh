@model List<Nhom10ModuleDiemDanh.Models.LichHocDtoV>

@{
    ViewData["Title"] = "Lịch Học";
}

<h2>Lịch Học</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên Kế Hoạch</th>
            <th>Tên Nhóm Xưởng</th>
            <th>Ca Học</th>
            <th>Ngày Học</th>
            <th>Trạng Thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenKeHoach</td>
                <td>@item.TenNhomXuong</td>
                <td>@item.TenCaHoc</td>
                <td>@item.NgayHoc.ToString("dd/MM/yyyy")</td>
                <td>
                    @(item.TrangThai == 1 ? "Hoạt động" : "Không hoạt động")
                </td>
            </tr>
        }
    </tbody>
</table>
