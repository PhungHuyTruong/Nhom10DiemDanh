@model API.Data.CapDoDuAn

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="IdCDDA" />
    <div class="modal-body">
        <div class="mb-3">
            <label asp-for="TenCapDoDuAn" class="form-label" style="color: black">Tên cấp độ dự án:</label>
            <input asp-for="TenCapDoDuAn" class="form-control" required />
            <span asp-validation-for="TenCapDoDuAn" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MaCapDoDuAn" class="form-label" style="color: black;">Mã cấp độ dự án:</label>
            <input asp-for="MaCapDoDuAn" class="form-control" required />
            <span asp-validation-for="MaCapDoDuAn" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MoTa" class="form-label" style="color: black;">Mô tả:</label>
            <input asp-for="MoTa" class="form-control" required />
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Cập nhật</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
    </div>
</form>
