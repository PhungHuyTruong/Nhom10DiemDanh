@model KeHoachViewModel
@{
    Layout = null;
}

<form id="editForm" asp-action="Edit" asp-controller="KeHoach" method="post">
    <input type="hidden" asp-for="IdKeHoach" />
    <div class="mb-3">
        <label class="form-label">Tên kế hoạch</label>
        <input asp-for="TenKeHoach" class="form-control" />
        <span asp-validation-for="TenKeHoach" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdDuAn"></label>
        <select asp-for="IdDuAn" asp-items="ViewBag.DuAnList" class="form-control">
            <option value="">-- Chọn dự án --</option>
        </select>
        <span asp-validation-for="IdDuAn" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Nội dung</label>
        <textarea asp-for="NoiDung" class="form-control"></textarea>
        <span asp-validation-for="NoiDung" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Thời gian bắt đầu</label>
        <input asp-for="ThoiGianBatDau" type="datetime-local" class="form-control" value="@Model.ThoiGianBatDau.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Thời gian kết thúc</label>
        <input asp-for="ThoiGianKetThuc" type="datetime-local" class="form-control" value="@Model.ThoiGianKetThuc.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="TrangThai" />
</form>