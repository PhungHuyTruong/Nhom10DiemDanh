@{
    Layout = "~/Views/Shared/SinhVienLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="card bg-primary text-white mb-4">
        <div class="card-body">
            <h2 class="card-title">Chào mừng sinh viên</h2>
            <p class="card-text">Hệ thống quản lý điểm danh xưởng</p>
        </div>
    </div>

    <!-- Thông tin sinh viên -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fa fa-user me-2"></i>Thông tin sinh viên</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Tên sinh viên:</strong> @ViewBag.SinhVienTen</p>
                    <p><strong>Mã sinh viên:</strong> @ViewBag.SinhVienMa</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Email:</strong> @ViewBag.SinhVienEmail</p>
                    <p><strong>ID:</strong> @ViewBag.SinhVienId</p>
                </div>
            </div>
        </div>
    </div>
