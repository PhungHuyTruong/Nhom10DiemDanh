    @model API.Data.KeHoachNhomXuong

    @{
        ViewData["Title"] = "Sửa kế hoạch nhóm xưởng";
    }

    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="IdKHNX" />
        <input type="hidden" asp-for="IdKeHoach" />

        <div class="form-group">
            <label for="IdNhomXuong">Nhóm xưởng</label>
            <select asp-for="IdNhomXuong" class="form-control" asp-items="ViewBag.DanhSachNhomXuong"></select>
        </div>

        <div class="form-group">
            <label asp-for="NgayBatDau"></label>
            <input asp-for="NgayBatDau" class="form-control" type="date" />
        </div>

        <div class="form-group">
            <label asp-for="NgayKetThuc"></label>
            <input asp-for="NgayKetThuc" class="form-control" type="date" />
        </div>

        <div class="form-group">
            <label asp-for="SoBuoi"></label>
            <input asp-for="SoBuoi" class="form-control" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a asp-action="Index" asp-route-idKeHoach="@Model.IdKeHoach" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
