@model API.Data.DuAn

@{
    Layout = null; // Quan trọng để modal không nhúng layout cha
}


<form asp-action="Create" id="form-create-duan">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <!-- Tên dự án -->
    <div class="mb-3">
        <label asp-for="TenDuAn" class="form-label" style="color: black">Tên dự án</label>
        <input asp-for="TenDuAn" class="form-control" />
        <span asp-validation-for="TenDuAn" class="text-danger"></span>
    </div>

    <!-- Mô tả -->
    <div class="mb-3">
        <label asp-for="MoTa" class="form-label" style="color: black">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <!-- Cấp độ -->
    <div class="mb-3">
        <label asp-for="IdCDDA" class="form-label" style="color: black">Cấp độ dự án</label>
        <select asp-for="IdCDDA" class="form-select" asp-items="ViewBag.IdCDDA">
            <option value="">-- Chọn cấp độ --</option>
        </select>
        <span asp-validation-for="IdCDDA" class="text-danger"></span>
    </div>

    <!-- Bộ môn -->
    <div class="mb-3">
        <label asp-for="IdBoMon" class="form-label" style="color: black">Bộ môn</label>
        <select asp-for="IdBoMon" class="form-select" asp-items="ViewBag.IdBoMon">
            <option value="">-- Chọn bộ môn --</option>
        </select>
        <span asp-validation-for="IdBoMon" class="text-danger"></span>
    </div>

    <!-- Học kỳ -->
    <div class="mb-3">
        <label asp-for="IdHocKy" class="form-label" style="color: black">Học kỳ</label>
        <select asp-for="IdHocKy" class="form-select" asp-items="ViewBag.IdHocKy">
            <option value="">-- Chọn học kỳ --</option>
        </select>
        <span asp-validation-for="IdHocKy" class="text-danger"></span>
    </div>

    <!-- Trạng thái -->
    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="TrangThai" />
        <label class="form-check-label" asp-for="TrangThai" style="color: black">Hoạt động</label>
    </div>

    <!-- Nút lưu -->
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Lưu
        </button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
