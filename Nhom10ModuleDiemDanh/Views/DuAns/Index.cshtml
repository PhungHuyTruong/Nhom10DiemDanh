@model IEnumerable<API.Data.DuAn>
@{
    ViewData["Title"] = "Danh Sách Dự Án";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 bg-light py-4 shadow-sm" style="min-height: 100vh;">
            <h1 class="text-primary fw-bold">DD10</h1>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link active bg-info text-white rounded" href="#">Quản lý dự án</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="#">Quản lý nhóm xưởng</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="#">Danh sách kế hoạch</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Quản lý sinh viên</a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="col-md-10 p-4">
            <div class="bg-primary text-white p-3 rounded mb-3">
                <h3 class="m-0">📘 Danh Sách Dự Án</h3>
            </div>

            <!-- Bộ lọc -->
            <div class="bg-light border p-3 rounded mb-3">
                <h5>¥ Bộ lọc</h5>
                <form method="get" asp-action="Index" class="row g-2 align-items-center">
                    <div class="col-md-3">
                        <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Tìm kiếm theo tên" />
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" name="capDo">
                            <option value="">Tất cả cấp độ dự án</option>
                            <option value="Cấp 1">Cấp 1</option>
                            <option value="Cấp 2">Cấp 2</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" name="hocKy">
                            <option value="">Tất cả học kỳ</option>
                            <option value="SUMMER-2005">SUMMER-2005</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" name="monHoc">
                            <option value="">Tất cả môn học</option>
                            <option value="Lập trình C#">Lập trình C#</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" name="trangThai">
                            <option value="">Tất cả trạng thái</option>
                            <option value="true">Đang hoạt động</option>
                            <option value="false">Ngừng</option>
                        </select>
                    </div>
                    <div class="col-md-1">
                        <button class="btn btn-outline-primary w-100">Lọc</button>
                    </div>
                </form>
            </div>

            <!-- Danh sách -->
            <div class="card shadow-sm mb-4">
                <div class="card-header fw-bold">📋 Danh sách dự án</div>
                <div class="card-body p-0">
                    <table class="table table-striped m-0">
                        <thead class="table-primary">
                            <tr>
                                <th>#</th>
                                <th>Tên</th>
                                <th>Cấp độ dự án</th>
                                <th>Học kỳ</th>
                                <th>Môn học</th>
                                <th>Mô tả</th>
                                <th>Trạng thái</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">
                                        Không có dữ liệu. Vui lòng sử dụng bộ lọc để tìm kiếm.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                int stt = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@stt++</td>
                                        <td>@item.TenDuAn</td>
                                        <td>@item.CapDoDuAn</td>
                                        <td>@item.HocKy?.TenHocKy</td>
                                        <td>@item.QuanLyBoMon?.TenBoMon</td>
                                        <td>@item.MoTa</td>
                                        <td>
                                            @if (item.TrangThai)
                                            {
                                                <span class="text-success fw-semibold">
                                                    <i class="bi bi-circle-fill text-success"></i> Đang hoạt động
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">
                                                    <i class="bi bi-circle-fill text-secondary"></i> Ngừng
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-primary btn-edit-duan" data-id="@item.IdDuAn">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <button class="btn btn-primary" id="btn-show-create"><i class="bi bi-plus-lg"></i> Thêm</button>
        </div>
    </div>
</div>

<!-- Modal Create -->
<div class="modal fade" id="modal-create" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm Dự Án</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modal-create-body">
                <!-- AJAX sẽ load form vào đây -->
            </div>
        </div>
    </div>
</div>

<!-- Modal Edit -->
<div class="modal fade" id="modal-edit" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh sửa Dự Án</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modal-edit-body">
                <!-- AJAX sẽ load form vào đây -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#btn-show-create').click(function () {
                $.get('@Url.Action("Create", "DuAns")', function (html) {
                    $('#modal-create-body').html(html);
                    $('#modal-create').modal('show');
                });
            });

            $(document).on('submit', '#form-create-duan', function (e) {
                e.preventDefault();
                const form = $(this);
                $.ajax({
                    type: "POST",
                    url: form.attr('action'),
                    data: form.serialize(),
                    success: function () {
                        $('#modal-create').modal('hide');
                        location.reload();
                    },
                    error: function (xhr) {
                        let message = "Đã xảy ra lỗi khi thêm.";
                        try {
                            const res = JSON.parse(xhr.responseText);
                            message = res.message || xhr.responseText;
                        } catch {
                            message = xhr.responseText;
                        }
                        alert("❌ " + message);
                        $('#modal-create-body').html(xhr.responseText);
                    }
                });
            });

            $(document).on("click", ".btn-edit-duan", function () {
                var id = $(this).data("id");
                $.get(`/DuAns/Edit/${id}`, function (html) {
                    $('#modal-edit-body').html(html);
                    $('#modal-edit').modal('show');
                });
            });

            $(document).on("submit", "#form-edit-duan", function (e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    type: "POST",
                    url: form.attr("action"),
                    data: form.serialize(),
                    success: function () {
                        $('#modal-edit').modal('hide');
                        location.reload();
                    },
                    error: function (xhr) {
                        let message = "Đã xảy ra lỗi khi cập nhật.";
                        try {
                            const res = JSON.parse(xhr.responseText);
                            message = res.message || xhr.responseText;
                        } catch {
                            message = xhr.responseText;
                        }
                        alert("❌ " + message);
                        $('#modal-edit-body').html(xhr.responseText);
                    }
                });
            });
        });
    </script>
}
