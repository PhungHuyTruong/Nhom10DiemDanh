@model IEnumerable<API.Data.LichGiangDay>

@{
    ViewData["Title"] = "Danh sách Lịch Giảng Dạy";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Ngày Tạo</th>
            <th>Hình Thức Giảng Dạy</th>
            <th>Điểm danh</th>
            <th>Điểm danh muộn</th>
            <th>Trạng Thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                    <td>@item.HTGiangDay</td>
                    <td>@(item.TTDiemDanh ? "✔️" : "❌")</td>
                    <td>@(item.TTDiemDanhMuon ? "✔️" : "❌")</td>
                    <td>@(item.TrangThai == 1 ? "Hoạt động" : "Không hoạt động")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdLichDay" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.IdLichDay" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa?');">Xóa</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Không có dữ liệu.</td>
            </tr>
        }
    </tbody>
</table>
