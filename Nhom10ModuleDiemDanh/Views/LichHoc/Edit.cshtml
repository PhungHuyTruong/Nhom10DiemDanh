@model API.Data.LichHoc

@{
    ViewBag.Title = "Cập nhật Lịch Học";
}

<h2>Cập nhật Lịch Học</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IDLichHoc" />

    <div class="form-group">
        <label>ID Học Kỳ</label>
        <input asp-for="IDHocKy" class="form-control" />
    </div>

    <div class="form-group">
        <label>ID Nhóm Xưởng</label>
        <input asp-for="IdNhomXuong" class="form-control" />
    </div>

    <div class="form-group">
        <label>ID NXCH</label>
        <input asp-for="IdNXCH" class="form-control" />
    </div>

    <div class="form-group">
        <label>Trạng Thái</label>
        <input asp-for="TrangThai" class="form-control" />
        <span class="text-muted">Nhập 0 hoặc 1 (0: Chưa học, 1: Đã học)</span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
