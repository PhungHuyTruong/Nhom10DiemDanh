@model API.Data.CaHoc

<h2>Thêm Ca Học</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CoSoId" />

    <div class="form-group">
        <label asp-for="TenCaHoc"></label>
        <input asp-for="TenCaHoc" class="form-control" />
        <span asp-validation-for="TenCaHoc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ThoiGianBatDau"></label>
        <input asp-for="ThoiGianBatDau" class="form-control" type="time" />
        <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ThoiGianKetThuc"></label>
        <input asp-for="ThoiGianKetThuc" class="form-control" type="time" />
        <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
</form>
