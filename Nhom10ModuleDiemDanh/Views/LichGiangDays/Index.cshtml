@model List<API.Data.LichGiangDayDTO>
@{
    ViewData["Title"] = "Lịch giảng dạy";
    var q = Context.Request.Query;
}

<div class="d-flex">
    <!-- Sidebar -->
    <div class="bg-light border-end vh-100" style="width: 250px;">
        <div class="p-3 border-bottom text-center">
            <img src="~/images/logo-udpm.png" alt="UDPM Logo" class="img-fluid" style="max-height: 40px;" />
            <div class="mt-2 fw-bold small text-uppercase">UDPM - FPT Polytechnic</div>
        </div>
        <div class="list-group list-group-flush">
            <a href="/LichGiangDays" class="list-group-item list-group-item-action active">📘 Lịch giảng dạy</a>
            <a href="/NhomXuongs" class="list-group-item list-group-item-action">🛠 Nhóm xưởng của tôi</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex-grow-1 p-4">
        <h4 class="mb-4">📘 Lịch giảng dạy</h4>

        <!-- Bộ lọc -->
        <div class="card p-3 mb-4">
            <h6 class="fw-bold">Bộ lọc tìm kiếm</h6>
            <form method="get" class="row gy-2 gx-3 align-items-end mt-2">
                <div class="col-md-2">
                    <label>Từ ngày:</label>
                    <input type="date" class="form-control" name="fromDate" value="@q["fromDate"]" />
                </div>
                <div class="col-md-2">
                    <label>Đến ngày:</label>
                    <input type="date" class="form-control" name="toDate" value="@q["toDate"]" />
                </div>
                <div class="col-md-2">
                    <label>Hình thức:</label>
                    <input type="text" class="form-control" name="hinhThuc" value="@q["hinhThuc"]" placeholder="Offline/Online..." />
                </div>
                <div class="col-md-2">
                    <label>Xưởng:</label>
                    <input type="text" class="form-control" name="xuong" value="@q["xuong"]" placeholder="Tên nhóm xưởng..." />
                </div>
                <div class="col-md-2">
                    <label>Ca học:</label>
                    <input type="text" class="form-control" name="caHoc" value="@q["caHoc"]" placeholder="Ca sáng/chiều..." />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100">Lọc</button>
                </div>
            </form>
        </div>

        <!-- Lịch dạy hôm nay -->
        <div class="card mb-4 p-3">
            <h6 class="fw-bold">📅 Lịch dạy hôm nay</h6>
            <table class="table table-bordered mt-2">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Thời gian</th>
                        <th>Ca học</th>
                        <th>Điểm danh</th>
                        <th>Xưởng</th>
                        <th>Dự án</th>
                        <th>Địa điểm</th>
                        <th>Link học</th>
                        <th>Chi tiết / Sửa</th>
                        <th>Điểm danh</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var today = DateTime.Today;
                        var lichHomNay = Model.Where(x => x.NgayTao.Date == today).ToList();
                    }
                    @if (lichHomNay.Any())
                    {
                        int index = 1;
                        foreach (var item in lichHomNay)
                        {
                            <tr>
                                <td>@index++</td>
                                <td>@item.NgayTao.ToString("HH:mm dd/MM/yyyy")</td>
                                <td>@item.TenCaHoc</td>
                                <td>@(item.TTDiemDanh ? "✔️" : "❌")</td>
                                <td>@item.TenNhomXuong</td>
                                <td>@item.TenDuAn</td>
                                <td>@item.TenDiaDiem</td>
                                <td><a href="#">Link</a></td>
                                <td><a asp-action="Edit" asp-route-id="@item.IdLichDay">Sửa</a></td>
                                <td><a href="#">📝</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center text-muted">Không có dữ liệu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Danh sách có lọc -->
        <div class="card p-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h6 class="fw-bold">📚 Danh sách lịch dạy (lọc theo bộ lọc ở trên)</h6>
                <a class="btn btn-outline-secondary"
                   href="@Url.Action("ExportPdf", new {
                       fromDate = q["fromDate"],
                       toDate = q["toDate"],
                       hinhThuc = q["hinhThuc"],
                       xuong = q["xuong"],
                       caHoc = q["caHoc"]
                   })">
                    ⬇ Xuất PDF
                </a>
            </div>
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Ngày dạy</th>
                        <th>Thời gian</th>
                        <th>Ca học</th>
                        <th>Điểm danh</th>
                        <th>Xưởng</th>
                        <th>Dự án</th>
                        <th>Địa điểm</th>
                        <th>Hình thức</th>
                        <th>Link học</th>
                        <th>Chi tiết / Sửa</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int index = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@index++</td>
                                <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                <td>@item.NgayTao.ToString("HH:mm")</td>
                                <td>@item.TenCaHoc</td>
                                <td>@(item.TTDiemDanh ? "✔️" : "❌")</td>
                                <td>@item.TenNhomXuong</td>
                                <td>@item.TenDuAn</td>
                                <td>@item.TenDiaDiem</td>
                                <td>@item.HTGiangDay</td>
                                <td><a href="#">Link</a></td>
                                <td><a asp-action="Edit" asp-route-id="@item.IdLichDay">Sửa</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="11" class="text-center text-muted">Không có dữ liệu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
