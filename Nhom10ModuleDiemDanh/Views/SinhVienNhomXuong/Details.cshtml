@model API.Data.SinhVien
@{
    Layout = "~/Views/Shared/PhuTrachXuongLayout.cshtml";
}

<h2 class="text-white mb-4">Chi tiết sinh viên</h2>
<div class="card">
    <div class="card-header fw-bold">Thông tin sinh viên</div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tên sinh viên</dt>
            <dd class="col-sm-9">@Model.TenSinhVien</dd>

            <dt class="col-sm-3">Mã sinh viên</dt>
            <dd class="col-sm-9">@Model.MaSinhVien</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.TrangThai ? "bg-success" : "bg-secondary")">
                    @(Model.TrangThai ? "Hoạt động" : "Ngừng")
                </span>
            </dd>

            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.NgayTao?.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Ngày cập nhật</dt>
            <dd class="col-sm-9">@Model.NgayCapNhat?.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
        <a class="btn btn-secondary" href="javascript:history.back()">⬅️ Quay lại</a>
    </div>
</div> 