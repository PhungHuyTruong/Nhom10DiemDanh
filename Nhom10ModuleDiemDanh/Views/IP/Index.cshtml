@model IEnumerable<API.Data.IP>

@{
    Layout = "~/Views/Shared/CanBoDaoTaoLayout.cshtml";
}

<h1>Danh sách IP</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới IP</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Kiểu IP</th>
            <th>Địa chỉ IP</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.KieuIP</td>
                <td>@item.IP_DaiIP</td>
                <td>
                    @if (item.TrangThai)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Tạm khóa</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdIP" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.IdIP" class="btn btn-sm btn-danger" onclick="return confirm('Xác nhận xóa IP này?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
