@model API.Data.IP

@{
    Layout = "~/Views/Shared/CanBoDaoTaoLayout.cshtml";
}

<h1>Chỉnh sửa IP</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdIP" />

    <div class="mb-3">
        <label asp-for="KieuIP" class="form-label"></label>
        <input asp-for="KieuIP" class="form-control" />
        <span asp-validation-for="KieuIP" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IP_DaiIP" class="form-label"></label>
        <input asp-for="IP_DaiIP" class="form-control" />
        <span asp-validation-for="IP_DaiIP" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="TrangThai" class="form-check-input" />
        <label asp-for="TrangThai" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
