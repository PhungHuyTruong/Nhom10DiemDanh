@model API.Data.IP

@{
    Layout = "~/Views/Shared/CanBoDaoTaoLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa IP";
}

<h1>Chỉnh sửa IP</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdIP" />
    <input type="hidden" asp-for="IdCoSo" />

    <div class="mb-3">
        <label asp-for="KieuIP" class="form-label">Kiểu IP</label>
        <input asp-for="KieuIP" class="form-control" />
        <span asp-validation-for="KieuIP" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IP_DaiIP" class="form-label">Địa chỉ IP</label>
        <input asp-for="IP_DaiIP" class="form-control" />
        <span asp-validation-for="IP_DaiIP" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="TrangThai" class="form-check-input" type="checkbox" />
        <label asp-for="TrangThai" class="form-check-label">Trạng thái</label>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" asp-route-id="@Model.IdCoSo" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
