@* Model cho View này là CreateKeHoachNhomXuongDto *@
@model Nhom10ModuleDiemDanh.Controllers.CreateKeHoachNhomXuongDto

@{
    ViewData["Title"] = "Tạo mới Kế hoạch - Nhóm xưởng";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="IdKeHoach" class="control-label">Kế hoạch</label>
                            <select asp-for="IdKeHoach" class="form-control" asp-items="ViewBag.IdKeHoach">
                                <option value="">-- Chọn Kế hoạch --</option>
                            </select>
                            <span asp-validation-for="IdKeHoach" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="IdNhomXuong" class="control-label">Nhóm xưởng</label>
                            <select asp-for="IdNhomXuong" class="form-control" asp-items="ViewBag.IdNhomXuong">
                                <option value="">-- Chọn Nhóm xưởng --</option>
                            </select>
                            <span asp-validation-for="IdNhomXuong" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ThoiGianThucTe" class="control-label">Thời gian thực tế</label>
                            <input asp-for="ThoiGianThucTe" class="form-control" />
                            <span asp-validation-for="ThoiGianThucTe" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="SoBuoi" class="control-label">Số buổi</label>
                                <input asp-for="SoBuoi" class="form-control" />
                                <span asp-validation-for="SoBuoi" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="SoSinhVien" class="control-label">Số sinh viên</label>
                                <input asp-for="SoSinhVien" class="form-control" />
                                <span asp-validation-for="SoSinhVien" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                            <input asp-for="TrangThai" class="form-control" />
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4 text-center">
                            <input type="submit" value="Tạo mới" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
