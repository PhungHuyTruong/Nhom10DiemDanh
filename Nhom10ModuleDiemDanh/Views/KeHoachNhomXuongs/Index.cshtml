@* Model cho View này là một danh sách các KeHoachNhomXuongDto *@
@model IEnumerable<Nhom10ModuleDiemDanh.Controllers.KeHoachNhomXuongDto>

@{
    ViewData["Title"] = "Danh sách Kế hoạch - Nhóm xưởng";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@ViewData["Title"]</h4>
            <a asp-action="Create" class="btn btn-light">
                <i class="fas fa-plus-circle"></i> Tạo mới
            </a>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Tên Kế hoạch</th>
                        <th>Tên Nhóm xưởng</th>
                        <th>Số buổi</th>
                        <th>Số sinh viên</th>
                        <th>Trạng thái</th>
                        <th class="text-center" style="width: 220px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.TenKeHoach)</td>
                            <td>@Html.DisplayFor(modelItem => item.TenNhomXuong)</td>
                            <td>@Html.DisplayFor(modelItem => item.SoBuoi)</td>
                            <td>@Html.DisplayFor(modelItem => item.SoSinhVien)</td>
                            <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.IdKHNX" class="btn btn-sm btn-outline-primary">Sửa</a>
                                <a asp-action="Details" asp-route-id="@item.IdKHNX" class="btn btn-sm btn-outline-info">Chi tiết</a>
                                <a asp-action="Delete" asp-route-id="@item.IdKHNX" class="btn btn-sm btn-outline-danger">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

