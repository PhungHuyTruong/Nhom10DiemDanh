@{
    ViewData["Title"] = "Thống kê cá nhân";
    Layout = "~/Views/Shared/SinhVienLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container-fluid mt-3">
    <div class="mb-4 d-flex flex-wrap align-items-center gap-3">
        <select class="form-select w-auto shadow-sm border-0" style="min-width: 220px;">
            <option selected>-- Vui lòng chọn 1 học kỳ --</option>
            <option>Học kỳ 1/2024</option>
            <option>Học kỳ 2/2024</option>
        </select>
        <button class="btn btn-warning text-dark px-4 shadow-sm">Lọc</button>
        <button class="btn btn-light text-dark border shadow-sm">Huỷ lọc</button>
    </div>

    <!-- Thống kê chung -->
    @{
        var boxItems = new[]
        {
    new { Label = "Nhóm xưởng", Value = 1, Icon = "fa-layer-group" },
    new { Label = "Dự án", Value = 1, Icon = "fa-calendar-alt" },
    new { Label = "Hoàn thành", Value = 0, Icon = "fa-check-circle" },
    new { Label = "Không đạt", Value = 0, Icon = "fa-times-circle" },
    new { Label = "Đang diễn ra", Value = 1, Icon = "fa-sync-alt" }
    };
    }
    <div class="d-flex flex-wrap gap-4 mb-4 justify-content-start">
        @foreach (var item in boxItems)
        {
            <div class="d-flex justify-content-between align-items-center bg-white shadow-sm border rounded p-3" style="min-width: 180px; max-width: 100%; flex-grow: 1;">
                <div>
                    <div class="text-dark small">@item.Label</div>
                    <div class="fs-4 fw-bold text-dark">@item.Value</div>
                </div>
                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 36px; height: 36px;">
                    <i class="fas @item.Icon"></i>
                </div>
            </div>
        }
    </div>


    <!-- Tổng quan và Biểu đồ (hoán đổi vị trí) -->
    <div class="row g-4 mb-4">
        <!-- Biểu đồ (bên trái) -->
        <div class="col-lg-9 order-lg-1">
            <div class="card h-100">
                <div class="card-header fw-semibold">
                    <i class="fas fa-chart-line me-1"></i> Tỷ lệ điểm danh theo nhóm xưởng
                    <span class="float-end badge bg-light text-dark">1 nhóm xưởng</span>
                </div>
                <div class="card-body">
                    <canvas id="attendanceChart" height="120"></canvas>
                </div>
            </div>
        </div>

        <!-- Tổng quan (bên phải) -->
        <div class="col-lg-3 order-lg-2">
            <div class="card h-100">
                <div class="card-header fw-semibold bg-white">
                    <i class="fas fa-chart-pie me-1 text-success"></i> Tổng quan kết quả học tập
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush small">
                        <li class="list-group-item d-flex justify-content-between">Tổng nhóm xưởng tham gia: <span class="fw-bold">1</span></li>
                        <li class="list-group-item d-flex justify-content-between">Tổng dự án: <span class="fw-bold">1</span></li>
                        <li class="list-group-item d-flex justify-content-between">Đã hoàn thành: <span class="fw-bold text-success">0</span></li>
                        <li class="list-group-item d-flex justify-content-between">Không đạt yêu cầu: <span class="fw-bold text-danger">0</span></li>
                        <li class="list-group-item d-flex justify-content-between">Đang thực hiện: <span class="fw-bold">1</span></li>
                        <li class="list-group-item d-flex justify-content-between">Tỷ lệ hoàn thành: <span class="fw-bold text-success">0%</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    

    <!-- Chi tiết bảng -->
    <div class="card mt-4">
        <div class="card-header fw-semibold">
            <i class="fas fa-table me-1"></i> Chi tiết tỷ lệ điểm danh theo nhóm xưởng
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered mb-0">
                <thead class="table-light text-center">
                    <tr>
                        <th>#</th>
                        <th>Tên nhóm xưởng</th>
                        <th>Tỷ lệ điểm danh</th>
                        <th>Kết quả</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    <tr>
                        <td>1</td>
                        <td><a href="#" class="text-primary text-decoration-none">Xưởng Thực Tập Nhóm 10</a></td>
                        <td>
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar bg-success" style="width: 96%;">96%</div>
                            </div>
                        </td>
                        <td><span class="badge bg-success">Đạt yêu cầu</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

<script>
    const ctx = document.getElementById('attendanceChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['-', 'Xưởng Thực Tập Nhóm 10', '-'],
            datasets: [{
                label: 'Tỷ lệ điểm danh (%)',
                data: [0, 96, 0],
                fill: true,
                backgroundColor: 'rgba(0, 123, 255, 0.1)',
                borderColor: '#007bff',
                tension: 0.4,
                pointBackgroundColor: '#007bff',
                pointRadius: 5
            }]
        },
        options: {
            plugins: { legend: { display: false } },
            scales: {
                y: { beginAtZero: true, max: 100 }
            }
        }
    });
</script>
