@model API.Data.KHNXCaHoc

@{
    ViewData["Title"] = "Chỉnh sửa Ca Học";
}

<div class="container py-4">
    <h2 class="text-white fw-bold mb-4" style="background: linear-gradient(to right, #00b09b, #96c93d); padding: 15px; border-radius: 8px;">
        <i class="fa fa-edit me-2"></i> Chỉnh sửa Ca Học
    </h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" class="row g-3">
                <input type="hidden" asp-for="IdNXCH" />

                <div class="col-md-6">
                    <label asp-for="Buoi" class="form-label">Buổi</label>
                    <input asp-for="Buoi" class="form-control" />
                    <span asp-validation-for="Buoi" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="NgayHoc" class="form-label">Ngày học</label>
                    <input asp-for="NgayHoc" type="date" class="form-control" />
                    <span asp-validation-for="NgayHoc" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ThoiGian" class="form-label">Thời gian</label>
                    <input asp-for="ThoiGian" class="form-control" />
                    <span asp-validation-for="ThoiGian" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="IdKHNX" class="form-label">Kế hoạch nhóm xưởng</label>
                    <select asp-for="IdKHNX" class="form-select" asp-items="ViewBag.IdKHNX"></select>
                    <span asp-validation-for="IdKHNX" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="IdCaHoc" class="form-label">Ca học</label>
                    <select asp-for="IdCaHoc" class="form-select" asp-items="ViewBag.IdCaHoc"></select>
                    <span asp-validation-for="IdCaHoc" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="NoiDung" class="form-label">Nội dung</label>
                    <input asp-for="NoiDung" class="form-control" />
                    <span asp-validation-for="NoiDung" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LinkOnline" class="form-label">Link online</label>
                    <input asp-for="LinkOnline" class="form-control" />
                    <span asp-validation-for="LinkOnline" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DiemDanhTre" class="form-label">Điểm danh trễ</label>
                    <input asp-for="DiemDanhTre" class="form-control" />
                    <span asp-validation-for="DiemDanhTre" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="NgayTao" class="form-label">Ngày tạo</label>
                    <input asp-for="NgayTao" class="form-control" readonly />
                </div>

                <div class="col-md-6">
                    <label asp-for="NgayCapNhat" class="form-label">Ngày cập nhật</label>
                    <input asp-for="NgayCapNhat" class="form-control" />
                    <span asp-validation-for="NgayCapNhat" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="TrangThai" class="form-label">Trạng thái</label>
                    <select asp-for="TrangThai" class="form-select">
                        <option value="1">Hoạt động</option>
                        <option value="0">Tạm dừng</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>

                <div class="col-12 text-end mt-4">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="fa fa-save me-1"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
