@model API.Data.VaiTro

@{
    Layout = "~/Views/Shared/CanBoDaoTaoLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="TenVaiTro" class="form-label">Tên vai trò</label>
        <input asp-for="TenVaiTro" class="form-control" />
        <span asp-validation-for="TenVaiTro" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
